<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_billActivity"
        android:layout_width="420dp"
        android:layout_height="80dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_billReturn"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="返回"
        app:layout_constraintStart_toStartOf="@+id/tb_billActivity"
        app:layout_constraintTop_toTopOf="@+id/tb_billActivity" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_billBack1"
        android:layout_width="420dp"
        android:layout_height="115dp"
        android:layout_marginTop="78dp"
        android:background="@android:color/holo_orange_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_billBack2"
        android:layout_width="420dp"
        android:layout_height="100dp"
        android:background="@android:color/holo_blue_bright"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_billBack1" />

    <TextView
        android:id="@+id/lb_billDate"
        android:layout_width="93dp"
        android:layout_height="27dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="日期"
        app:layout_constraintStart_toStartOf="@+id/tb_billBack1"
        app:layout_constraintTop_toTopOf="@+id/tb_billBack1" />

    <TextView
        android:id="@+id/lb_billTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="138dp"
        android:text="时间"
        app:layout_constraintEnd_toEndOf="@+id/tb_billBack1"
        app:layout_constraintTop_toTopOf="@+id/tb_billBack1" />

    <Button
        android:id="@+id/bt_billDate"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="52dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="@+id/tb_billBack1"
        app:layout_constraintTop_toTopOf="@+id/tb_billBack1" />

    <Button
        android:id="@+id/bt_billTime"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="57dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/tb_billBack1"
        app:layout_constraintTop_toTopOf="@+id/tb_billBack1" />

    <Button
        android:id="@+id/bt_billEdit"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="编辑"
        app:layout_constraintEnd_toEndOf="@+id/tb_billActivity"
        app:layout_constraintTop_toTopOf="@+id/tb_billActivity" />

    <TextView
        android:id="@+id/lb_billMoneyBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:text="金额："
        app:layout_constraintStart_toEndOf="@+id/tb_billBack2"
        app:layout_constraintStart_toStartOf="@+id/tb_billBack2"
        app:layout_constraintTop_toTopOf="@+id/tb_billBack2" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_billBack3"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:background="@android:color/holo_purple"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_billBack2" />

    <EditText
        android:id="@+id/et_billMoney"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="176dp"
        android:ems="10"
        android:inputType="number|text"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/tb_billBack2"
        app:layout_constraintTop_toTopOf="@+id/tb_billBack2" />

    <TextView
        android:id="@+id/lb_billMoneyAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="152dp"
        android:text="元"
        app:layout_constraintEnd_toEndOf="@+id/tb_billBack2"
        app:layout_constraintTop_toTopOf="@+id/tb_billBack2" />

    <TextView
        android:id="@+id/lb_billEventBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:text="项目"
        app:layout_constraintStart_toStartOf="@+id/tb_billBack3"
        app:layout_constraintTop_toTopOf="@+id/tb_billBack3" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="420dp"
        android:layout_height="91dp"
        android:background="@android:color/holo_green_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_billBack3" />

    <TextView
        android:id="@+id/lb_billLocationBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:text="位置"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <EditText
        android:id="@+id/et_billLocation"
        android:layout_width="244dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="113dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <Button
        android:id="@+id/bt_locateHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="当前位置"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/tb_billBack3" />

    <EditText
        android:id="@+id/et_billEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/tb_billBack3"
        app:layout_constraintTop_toTopOf="@+id/tb_billBack3" />

    <Button
        android:id="@+id/bt_billDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="16dp"
        android:text="删除"
        app:layout_constraintStart_toStartOf="@+id/tb_billActivity"
        app:layout_constraintTop_toTopOf="@+id/tb_billActivity" />

</android.support.constraint.ConstraintLayout>